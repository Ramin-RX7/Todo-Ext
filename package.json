{
  "name": "rx-todo",
  "displayName": "VSCode Todo",
  "description": "VS-Code extension for better todo lists in separate files",
  "version": "0.0.3",
  "publisher": "RaminRX7",
  "icon": "icon.png",

  "repository": {
    "type": "git",
    "url": "https://github.com/Ramin-RX7/vscode-todo"
  },

  "categories": [
    "Programming Languages", "Snippets", "Other"
  ],
  "keywords": ["todo","todo-list","tasks"],
  "engines": {"vscode": "^1.75.0"},

  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "todo"
      }
    ],

    "languages": [
        {
          "id": "todo",
          "aliases": [
            "Todo",
            "todo"
          ],
          "extensions": [
            ".todo",
            "todo.*"
          ],
          "configuration": "./language-configuration.json"
        }
      ],

    "grammars": [
      {
        "language": "todo",
        "scopeName": "source.todo",
        "path": "./syntaxes/todo.tmLanguage.json"
      }
    ],

    "colors": [
    {
      "id": "myextension.largeNumberBackground",
      "description": "Background decoration color for large numbers",
      "defaults": {
        "dark": "#FF000055",
        "light": "#FF000055",
        "highContrast": "#FF000055"
      }
    }
    ],

    "commands": [
      {"command": "VSCODE-TODO.TEST-COMMAND", "title": "VSCODE-TODO::TEST"},
      {
        "command": "Todo.toTask",
        "title": "Make Task"
      },
      {
        "command": "Todo.cancelTask",
        "title": "Cancel Task"
      },
      {
        "command": "Todo.completeTask",
        "title": "Complete Task"
      },
      {
        "command": "Todo.switchTask",
        "title": "Switch Task Status"
      }
    ],

    "keybindings": [
      {
        "command": "Todo.toTask",
        "key": "Alt+Enter",
        "mac": "Cmd+Enter",
        "when": "editorTextFocus && editorLangId=='todo'"
      },
      {
        "command": "Todo.switchTask",
        "key": "Alt+s",
        "mac": "Cmd+s",
        "when": "editorTextFocus && editorLangId=='todo'"
      }
    ],

    "configuration": {
			  "type": "object",
			  "title": "VSCode-Todo",
			  "properties": {
			  	  "vscode-todo-ext.tags": {
			  	  	"type": "object",
			  	  	"default": {},
			  	  	"description": "Customize tags to have different css styles. like color,background-color,font-style, etc."
			  	  },
            "vscode-todo-ext.tasksSymbols": {
              "type": "object",
              "additionalProperties": "string",
			  	  	"default": {
                "waiting"  :     "☐",
                "done"     :     "✔",
                "cancelled":     "✘"
              },
			  	  	"description": "First non-space character of a task that determines the status of it."
            }
			  }
	  },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-todo-viewcontainer",
          "title": "Todo",
          "icon": "./others/icon.svg"
        }
      ]
    },
    "views": {
      "vscode-todo-viewcontainer": [
        {
          "id": "todo-ext-view-wsDirs",
          "name": "Workspace Dirs"
        },
        {

          "id": "todo-ext-view-customDirs",
          "name": "Custom Dirs"
        }
      ]
    }

  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./",
    "download-api": "vscode-dts dev",
    "postinstall": "npm run download-api"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "vscode-dts": "^0.3.3",
    "typescript": "^4.9.4"
  }
}
